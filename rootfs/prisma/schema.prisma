// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model BaseSettings {
  hassBaseUrl String @id
  token String?
  googleClientId String?
  googleClientSecret String?
  googleRefreshToken String?
}

model Configuration {
  uid String @id @default(cuid())
  name String @unique
  weatherEntity String?
  backgroundMusicEntity String?
  backgroundMusicFile String?
  googleAlbumId String?
  useLocalPhotos Boolean @default(false)
  disableSlideShow DisableSlideShowConfig[]
  views View[]
}

model DisableSlideShowConfig {
  uid String @id @default(cuid())
  configuration Configuration @relation(fields: [configId], references: [uid])
  configId String
  entity String
  state String
}

model View {
  uid String @id @default(cuid())
  configuration Configuration @relation(fields: [configId], references: [uid])
  configId String
  icon String?
  sortOrder Int
  tiles Tile[]
}

model Tile {
  id String @id @default(cuid())
  view View @relation(fields: [viewId], references: [uid])
  viewId String
  x Int
  y Int
  w Int
  h Int
  component String
  config Json
}